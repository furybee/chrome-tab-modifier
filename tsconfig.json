{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "composite": true,
    "allowSyntheticDefaultImports": true

    // Note: types are auto-discovered from @types packages in node_modules
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "*.html", "*.json", "vite.config.ts"],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
